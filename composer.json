{
  "name": "tourze/srt-php",
  "description": "SRT (Secure Reliable Transport) protocol implementation in PHP",
  "type": "library",
  "license": "MIT",
  "require": {
    "ext-filter": "*",
    "ext-hash": "*",
    "ext-openssl": "*",
    "ext-sockets": "*",
    "ext-sodium": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.5",
    "tourze/phpunit-base": "1.*",
    "tourze/symfony-testing-framework": "0.0.*"
  },
  "autoload": {
    "psr-4": {
      "Tourze\\SRT\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tourze\\SRT\\Tests\\": "tests/"
    }
  }
}